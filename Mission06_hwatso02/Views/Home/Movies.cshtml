@{
    ViewData["Title"] = "Add A Movie";
}

@model Mission06_hwatso02.Models.MovieCollection

<h1>Add a Movie to the Collection</h1>

<!--Create form on page-->
<div>
    <form method="post">
        <label asp-for="Category">Category:</label>
        <select asp-for="CategoryId">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select><br />

        <label asp-for="Title">Title:</label>
        <input asp-for="Title" /><br />

        <label asp-for="Year">Year:</label>
        <input asp-for="Year" /><br />

        <label asp-for="Director">Director:</label>
        <input asp-for="Director" /><br />

        <label asp-for="Rating">Movie Rating:</label>
        <select asp-for="RatingId">
            <option value="">Select a Rating</option>
            @foreach (Rating r in ViewBag.Ratings)
            {
                <option value="@r.RatingId">@r.RatingName</option>
            }
        </select><br />

        <label asp-for="Edited">Edited:</label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br />

        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo" /><br />

        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes" /><br />

        <button type="submit">Add Movie</button>
    </form>
</div>